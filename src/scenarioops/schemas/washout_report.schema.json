{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Washout Report",
  "type": "object",
  "required": [
    "duplicate_ratio",
    "duplicate_groups",
    "undercovered_domains",
    "missing_categories",
    "proposed_forces"
  ],
  "properties": {
    "duplicate_ratio": { "type": "number", "minimum": 0, "maximum": 1 },
    "duplicate_groups": {
      "type": "array",
      "items": { "$ref": "#/$defs/duplicateGroup" }
    },
    "undercovered_domains": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "missing_categories": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "proposed_forces": {
      "type": "array",
      "items": { "$ref": "#/$defs/proposedForce" }
    },
    "reason": { "type": "string" },
    "notes": { "type": "string" }
  },
  "additionalProperties": false,
  "$defs": {
    "duplicateGroup": {
      "type": "object",
      "required": ["primary_id", "merge_ids", "rationale"],
      "properties": {
        "primary_id": { "type": "string", "minLength": 1 },
        "merge_ids": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "rationale": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "proposedForce": {
      "type": "object",
      "required": ["name", "domain", "description", "why_it_matters"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "domain": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "why_it_matters": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    }
  }
}
