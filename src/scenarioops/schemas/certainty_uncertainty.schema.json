{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Certainty vs Uncertainty",
  "type": "object",
  "required": ["predetermined_elements", "uncertainties"],
  "properties": {
    "predetermined_elements": {
      "type": "array",
      "items": { "$ref": "#/$defs/predeterminedElement" }
    },
    "uncertainties": {
      "type": "array",
      "items": { "$ref": "#/$defs/uncertainty" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "predeterminedElement": {
      "type": "object",
      "required": ["id", "name", "description", "evidence_ids", "reasoning"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "evidence_ids": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "reasoning": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "uncertainty": {
      "type": "object",
      "required": [
        "id",
        "name",
        "description",
        "evidence_ids",
        "reasoning",
        "impact",
        "uncertainty"
      ],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "evidence_ids": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "reasoning": { "type": "string", "minLength": 1 },
        "impact": { "type": "number", "minimum": 0, "maximum": 1 },
        "uncertainty": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "additionalProperties": false
    }
  }
}
