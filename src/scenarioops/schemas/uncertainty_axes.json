{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Uncertainty Axes",
  "type": "object",
  "required": [
    "run_id",
    "timestamp",
    "company_name",
    "geography",
    "horizon_months",
    "needs_correction",
    "warnings",
    "axes",
    "selected_axis_ids"
  ],
  "properties": {
    "run_id": { "type": "string", "minLength": 1 },
    "timestamp": { "type": "string", "minLength": 1 },
    "company_name": { "type": "string", "minLength": 1 },
    "geography": { "type": "string", "minLength": 1 },
    "horizon_months": { "type": "integer", "minimum": 0 },
    "needs_correction": { "type": "boolean" },
    "warnings": { "type": "array", "items": { "type": "string" } },
    "axes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "axis_id",
          "axis_name",
          "pole_a",
          "pole_b",
          "impact_score",
          "uncertainty_score",
          "tension_basis",
          "what_would_change_mind",
          "independence_notes"
        ],
        "properties": {
          "axis_id": { "type": "string", "minLength": 1 },
          "axis_name": { "type": "string", "minLength": 1 },
          "pole_a": { "type": "string", "minLength": 1 },
          "pole_b": { "type": "string", "minLength": 1 },
          "impact_score": { "type": "number", "minimum": 0, "maximum": 5 },
          "uncertainty_score": { "type": "number", "minimum": 0, "maximum": 5 },
          "tension_basis": {
            "type": "object",
            "required": ["cluster_ids", "force_ids"],
            "properties": {
              "cluster_ids": { "type": "array", "items": { "type": "string" } },
              "force_ids": { "type": "array", "items": { "type": "string" } }
            },
            "additionalProperties": false
          },
          "what_would_change_mind": {
            "type": "array",
            "items": { "type": "string" }
          },
          "independence_notes": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    },
    "selected_axis_ids": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
