{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Uncertainties",
  "type": "object",
  "required": ["id", "title", "uncertainties"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "uncertainties": {
      "type": "array",
      "items": { "$ref": "#/$defs/uncertaintyEntry" }
    },
    "metadata": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": false,
  "$defs": {
    "uncertaintyEntry": {
      "type": "object",
      "required": ["id", "name", "description", "extremes", "driver_ids"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "extremes": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 2
        },
        "driver_ids": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2
        },
        "criticality": { "type": "integer", "minimum": 1, "maximum": 5 },
        "volatility": { "type": "integer", "minimum": 1, "maximum": 5 },
        "implications": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    }
  }
}
