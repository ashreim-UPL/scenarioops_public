{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Forces Ranked",
  "type": "object",
  "required": [
    "run_id",
    "timestamp",
    "company_name",
    "geography",
    "horizon_months",
    "weights",
    "coverage_stats",
    "forces"
  ],
  "properties": {
    "run_id": { "type": "string", "minLength": 1 },
    "timestamp": { "type": "string", "minLength": 1 },
    "company_name": { "type": "string", "minLength": 1 },
    "geography": { "type": "string", "minLength": 1 },
    "horizon_months": { "type": "integer", "minimum": 36, "maximum": 120 },
    "weights": {
      "type": "object",
      "required": ["emergence", "business_impact", "evidence_strength"],
      "properties": {
        "emergence": { "type": "number" },
        "business_impact": { "type": "number" },
        "evidence_strength": { "type": "number" }
      },
      "additionalProperties": false
    },
    "coverage_stats": { "type": "object", "additionalProperties": true },
    "top_by_layer": { "type": "object", "additionalProperties": true },
    "top_by_domain": { "type": "object", "additionalProperties": true },
    "forces": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "force_id",
          "E_emergence",
          "B_business_impact",
          "E_evidence_strength",
          "ebe_score",
          "rationale"
        ],
        "properties": {
          "force_id": { "type": "string", "minLength": 1 },
          "E_emergence": { "type": "number", "minimum": 0, "maximum": 5 },
          "B_business_impact": { "type": "number", "minimum": 0, "maximum": 5 },
          "E_evidence_strength": { "type": "number", "minimum": 0, "maximum": 5 },
          "ebe_score": { "type": "number" },
          "rationale": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
