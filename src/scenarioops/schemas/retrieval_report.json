{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Retrieval Report",
  "type": "object",
  "required": [
    "run_id",
    "timestamp",
    "company_name",
    "geography",
    "horizon_months",
    "schema_version",
    "status",
    "counts",
    "thresholds",
    "recovery"
  ],
  "properties": {
    "run_id": { "type": "string", "minLength": 1 },
    "timestamp": { "type": "string", "minLength": 1 },
    "company_name": { "type": "string", "minLength": 1 },
    "geography": { "type": "string", "minLength": 1 },
    "horizon_months": { "type": "integer", "minimum": 0 },
    "schema_version": { "type": "string", "const": "1.0" },
    "status": { "type": "string", "enum": ["ok", "partial", "failed"] },
    "counts": {
      "type": "object",
      "required": ["total", "ok", "partial", "failed"],
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "ok": { "type": "integer", "minimum": 0 },
        "partial": { "type": "integer", "minimum": 0 },
        "failed": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "thresholds": {
      "type": "object",
      "required": ["min_evidence_ok", "min_evidence_total", "max_failed_ratio"],
      "properties": {
        "min_evidence_ok": { "type": "integer", "minimum": 0 },
        "min_evidence_total": { "type": "integer", "minimum": 0 },
        "max_failed_ratio": { "type": ["number", "null"], "minimum": 0 }
      },
      "additionalProperties": false
    },
    "recovery": {
      "type": "object",
      "required": ["attempted_replacements", "search_queries_used", "exhausted"],
      "properties": {
        "attempted_replacements": { "type": "integer", "minimum": 0 },
        "search_queries_used": { "type": "integer", "minimum": 0 },
        "exhausted": { "type": "boolean" },
        "reasons": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "notes": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
