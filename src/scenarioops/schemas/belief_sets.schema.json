{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Belief Sets",
  "type": "object",
  "required": ["belief_sets"],
  "properties": {
    "belief_sets": {
      "type": "array",
      "items": { "$ref": "#/$defs/beliefSet" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "beliefSet": {
      "type": "object",
      "required": ["uncertainty_id", "dominant_belief", "counter_belief"],
      "properties": {
        "uncertainty_id": { "type": "string", "minLength": 1 },
        "dominant_belief": { "$ref": "#/$defs/belief" },
        "counter_belief": { "$ref": "#/$defs/belief" }
      },
      "additionalProperties": false
    },
    "belief": {
      "type": "object",
      "required": ["id", "statement", "assumptions", "evidence_ids"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "statement": { "type": "string", "minLength": 1 },
        "assumptions": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        },
        "evidence_ids": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": false
    }
  }
}
