{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Trace Map",
  "type": "object",
  "required": ["run_id", "scenarios", "epistemic_summary"],
  "properties": {
    "run_id": { "type": "string", "minLength": 1 },
    "scenarios": {
      "type": "array",
      "items": { "$ref": "#/$defs/scenarioTrace" }
    },
    "epistemic_summary": { "$ref": "#/$defs/epistemicTrace" }
  },
  "additionalProperties": false,
  "$defs": {
    "scenarioTrace": {
      "type": "object",
      "required": ["scenario_id", "links"],
      "properties": {
        "scenario_id": { "type": "string", "minLength": 1 },
        "links": {
          "type": "array",
          "items": { "$ref": "#/$defs/traceLink" }
        }
      },
      "additionalProperties": false
    },
    "traceLink": {
      "type": "object",
      "required": ["claim_type", "artifact", "ids"],
      "properties": {
        "claim_type": { "type": "string", "minLength": 1 },
        "artifact": { "type": "string", "minLength": 1 },
        "ids": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "additionalProperties": false
    },
    "epistemicTrace": {
      "type": "object",
      "required": ["artifact", "facts", "assumptions", "interpretations", "unknowns"],
      "properties": {
        "artifact": { "type": "string", "minLength": 1 },
        "facts": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "assumptions": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "interpretations": { "type": "array", "items": { "type": "string", "minLength": 1 } },
        "unknowns": { "type": "array", "items": { "type": "string", "minLength": 1 } }
      },
      "additionalProperties": false
    }
  }
}
