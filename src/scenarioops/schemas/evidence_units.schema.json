{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Evidence Units",
  "type": "object",
  "required": [
    "run_id",
    "timestamp",
    "company_name",
    "geography",
    "horizon_months",
    "schema_version",
    "simulated",
    "evidence_units"
  ],
  "properties": {
    "run_id": { "type": "string", "minLength": 1 },
    "timestamp": { "type": "string", "minLength": 1 },
    "company_name": { "type": "string", "minLength": 1 },
    "geography": { "type": "string", "minLength": 1 },
    "horizon_months": { "type": "integer", "minimum": 36, "maximum": 120 },
    "schema_version": { "type": "string", "const": "2.0" },
    "simulated": { "type": "boolean" },
    "evidence_units": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "url",
          "title",
          "status",
          "retrieved_at",
          "content_type",
          "http_status",
          "source_method",
          "embedding_ref"
        ],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "evidence_unit_id": { "type": "string" },
          "url": {
            "anyOf": [
              { "type": "string", "minLength": 1 },
              { "type": "null" }
            ]
          },
          "title": { "type": "string", "minLength": 1 },
          "status": { "type": "string", "enum": ["ok", "partial", "failed"] },
          "failure_reason": { "type": ["string", "null"] },
          "summary": { "type": "string" },
          "claims": { "type": "array", "items": { "type": "string" } },
          "metrics": { "type": "array", "items": { "type": "string" } },
          "tags": { "type": "array", "items": { "type": "string" } },
          "retrieved_at": { "type": "string", "minLength": 1 },
          "content_type": { "type": ["string", "null"] },
          "http_status": { "type": ["integer", "null"] },
          "source_method": { "type": "string", "minLength": 1 },
          "embedding_ref": { "type": ["string", "null"] },
          "file_name": { "type": "string" },
          "sha256": { "type": "string" },
          "raw_text": { "type": "string" },
          "excerpt": { "type": "string" },
          "publisher": { "type": "string" },
          "date_published": { "type": "string" },
          "source_type": {
            "type": "string",
            "enum": ["primary", "secondary", "tertiary"]
          },
          "reliability_grade": { "type": "string", "enum": ["A", "B", "C", "D"] },
          "reliability_reason": { "type": "string" },
          "reliability_notes": { "type": "string" },
          "geography_tags": { "type": "array", "items": { "type": "string" } },
          "domain_tags": { "type": "array", "items": { "type": "string" } },
          "simulated": { "type": "boolean" }
        },
        "additionalProperties": false,
        "allOf": [
          {
            "if": { "properties": { "status": { "const": "ok" } } },
            "then": {
              "required": ["summary", "claims"],
              "properties": {
                "summary": { "minLength": 1 },
                "claims": { "minItems": 1 }
              }
            }
          }
        ]
      }
    }
  },
  "additionalProperties": false
}
