{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Epistemic Summary",
  "type": "object",
  "required": ["facts", "assumptions", "interpretations", "unknowns", "confidence_rules"],
  "properties": {
    "facts": {
      "type": "array",
      "items": { "$ref": "#/$defs/fact" }
    },
    "assumptions": {
      "type": "array",
      "items": { "$ref": "#/$defs/assumption" }
    },
    "interpretations": {
      "type": "array",
      "items": { "$ref": "#/$defs/interpretation" }
    },
    "unknowns": {
      "type": "array",
      "items": { "$ref": "#/$defs/unknown" }
    },
    "confidence_rules": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "fact": {
      "type": "object",
      "required": ["id", "statement", "evidence_ids", "confidence", "confidence_basis"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "statement": { "type": "string", "minLength": 1 },
        "evidence_ids": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "confidence_basis": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "assumption": {
      "type": "object",
      "required": [
        "id",
        "statement",
        "assumptions",
        "evidence_ids",
        "uncertainty_id",
        "stance",
        "confidence",
        "confidence_basis"
      ],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "statement": { "type": "string", "minLength": 1 },
        "assumptions": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "evidence_ids": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "uncertainty_id": { "type": "string", "minLength": 1 },
        "stance": { "type": "string", "enum": ["dominant", "counter"] },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "confidence_basis": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "interpretation": {
      "type": "object",
      "required": [
        "id",
        "statement",
        "belief_id",
        "domains",
        "order",
        "confidence",
        "confidence_basis"
      ],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "statement": { "type": "string", "minLength": 1 },
        "belief_id": { "type": "string", "minLength": 1 },
        "domains": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "order": { "type": "integer", "minimum": 1 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "confidence_basis": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "unknown": {
      "type": "object",
      "required": [
        "id",
        "statement",
        "evidence_ids",
        "impact",
        "uncertainty",
        "confidence",
        "confidence_basis"
      ],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "statement": { "type": "string", "minLength": 1 },
        "evidence_ids": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "impact": { "type": "number", "minimum": 0, "maximum": 1 },
        "uncertainty": { "type": "number", "minimum": 0, "maximum": 1 },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "confidence_basis": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    }
  }
}
