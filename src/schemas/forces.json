{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Forces",
  "type": "object",
  "required": [
    "run_id",
    "timestamp",
    "company_name",
    "geography",
    "horizon_months",
    "needs_correction",
    "warnings",
    "forces"
  ],
  "properties": {
    "run_id": { "type": "string", "minLength": 1 },
    "timestamp": { "type": "string", "minLength": 1 },
    "company_name": { "type": "string", "minLength": 1 },
    "geography": { "type": "string", "minLength": 1 },
    "horizon_months": { "type": "integer", "minimum": 0 },
    "needs_correction": { "type": "boolean" },
    "warnings": { "type": "array", "items": { "type": "string" } },
    "forces": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "force_id",
          "layer",
          "domain",
          "label",
          "mechanism",
          "directionality",
          "affected_dimensions",
          "evidence_unit_ids",
          "confidence",
          "confidence_rationale",
          "unlinked"
        ],
        "properties": {
          "force_id": { "type": "string", "minLength": 1 },
          "layer": { "type": "string", "enum": ["primary", "secondary", "tertiary"] },
          "domain": {
            "type": "string",
            "enum": ["political", "economic", "social", "technological", "environmental", "legal"]
          },
          "label": { "type": "string", "minLength": 1 },
          "mechanism": { "type": "string", "minLength": 1 },
          "directionality": { "type": "string", "minLength": 1 },
          "affected_dimensions": { "type": "array", "items": { "type": "string" } },
          "evidence_unit_ids": { "type": "array", "items": { "type": "string" } },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "confidence_rationale": { "type": "string", "minLength": 1 },
          "unlinked": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
