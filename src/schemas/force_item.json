{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Force Item",
  "type": "object",
  "required": [
    "layer",
    "domain",
    "label",
    "mechanism",
    "directionality",
    "affected_dimensions",
    "evidence_unit_ids",
    "confidence",
    "confidence_rationale"
  ],
  "properties": {
    "force_id": { "type": "string", "minLength": 1 },
    "layer": { "type": "string", "enum": ["primary", "secondary", "tertiary"] },
    "domain": {
      "type": "string",
      "enum": ["political", "economic", "social", "technological", "environmental", "legal"]
    },
    "label": { "type": "string", "minLength": 1 },
    "mechanism": { "type": "string", "minLength": 1 },
    "directionality": { "type": "string", "minLength": 1 },
    "affected_dimensions": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "evidence_unit_ids": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "confidence_rationale": { "type": "string", "minLength": 1 }
  },
  "additionalProperties": false
}
