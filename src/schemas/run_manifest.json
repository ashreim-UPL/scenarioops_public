{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Run Manifest",
  "type": "object",
  "required": [
    "run_id",
    "timestamp",
    "status",
    "code_commit",
    "config_hash",
    "schema_versions",
    "prompt_versions",
    "input_parameters",
    "node_sequence",
    "artifact_index_path",
    "trace_map_path"
  ],
  "properties": {
    "run_id": { "type": "string", "minLength": 1 },
    "timestamp": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "minLength": 1 },
    "code_commit": { "type": "string", "minLength": 1 },
    "config_hash": { "type": "string", "minLength": 1 },
    "schema_versions": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "prompt_versions": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "input_parameters": { "type": "object", "additionalProperties": true },
    "node_sequence": {
      "type": "array",
      "items": { "$ref": "#/$defs/nodeEvent" }
    },
    "artifact_index_path": { "type": "string", "minLength": 1 },
    "trace_map_path": { "type": ["string", "null"] },
    "errors": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "nodeEvent": {
      "type": "object",
      "required": [
        "node",
        "duration_seconds",
        "inputs",
        "outputs",
        "schema_validated"
      ],
      "properties": {
        "node": { "type": "string", "minLength": 1 },
        "duration_seconds": { "type": "number", "minimum": 0 },
        "inputs": { "type": "array", "items": { "type": "string" } },
        "outputs": { "type": "array", "items": { "type": "string" } },
        "schema_validated": { "type": "boolean" },
        "error": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
